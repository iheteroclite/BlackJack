[flake8]
exclude = 
    # No need to traverse git directory
	.git,
	# There's no value in checking cache directories
	__pycache__,
	.svn,
	.tox,
	.nox,
	.eggs,
	*.egg,
	*.pyc

per-file-ignores =
    # imported but unused
    __init__.py: F401

show_source = True

require-plugins =
    flake8-2020
    flake8-typing-extensions

